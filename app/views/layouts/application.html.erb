<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= yield :head %>
  <%= javascript_include_tag "application" %>
  <%= yield :scripts %>
  <%= csrf_meta_tags %>

 	<!--[if lt IE 8]>
	<%= stylesheet_link_tag "font-awesome-ie7.min.css", media: "all" %>
	<![endif]-->

</head>

<body>

	<% if controller.controller_name == 'static_pages' && controller.action_name == 'home' %>
		<%= render 'layouts/hero' %>
		<%= render 'layouts/header' %>
		<div class="wrapper">
	<% else %>
		<div class="wrapper">
		<%= render 'layouts/header' %>
	<% end %>	

	<div>
		<%= yield %>
	</div>
	
	<div class="push"></div>
</div>

<%= render 'layouts/footer' %>

</body>
</html>