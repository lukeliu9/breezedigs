<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= yield :head %>
  <%= javascript_include_tag "application" %>
  <%= yield :scripts %>
  <%= csrf_meta_tags %>

</head>

<body>

	<% if controller.controller_name == 'static_pages' && controller.action_name == 'home' %>
		<%= render 'layouts/hero' %>
	<% end %>

<%= render 'layouts/header' %>

<div class="wrapper">
	<div class="container">	
		<% flash.each do |key, value| %>
			<%= content_tag(:div, value, class: "alert alert-#{key}") %>
		<% end %>
	</div>

	<div>
		<%= yield %>
	</div>
	<div class="push"></div>
</div>

<%= render 'layouts/footer' %>

</body>
</html>