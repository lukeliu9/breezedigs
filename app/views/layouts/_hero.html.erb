			<h1>The inside scoop on apartments</h1>
		</div>

		<div class="hero-search">
			<%= form_tag buildings_path, method: :get do %>
			  
			    <%= text_field_tag :search, params[:search], placeholder: "Building name, address, city, zip, or neighborhood" %>

		   	<button type="submit" class="hero-search-button">
    		<i class="icon-search icon-large"></i> 
			</button>

		  	</p>
			<% end %>
		</div>

		<div class="hero-links">
			<%= link_to "Write a review", new_review_path %>
			<%= link_to "Submit a rent", new_rent_path %>
		</div>

