		<div class="hero-details">
			<ul>
				<li><h3><%= @buildings.count %></h3><p>Buildings</p></li>
				<li><h3><%= @reviews.count %></h3><p>Reviews</p></li>
				<li><h3><%= @rents.count %></h3><p>Rents Prices</p></li>
			</ul>
		</div>
		-->

	</div>
</div>

<div class="home-stripe">
	<div class="container">
		<h3>Featured buildings:</h3>		
		<ul class="featured-buildings-ul">
		<% @featured.each do |building| %>
			<li class="featured-building">
				<h4><%= building.name %></h4>
				<div class="featured-image-container">
					<%= link_to(image_tag(building.photos.first.image.url, width: "140px"), building_path(building)) %>
				</div>
				<% if building.reviews.nil? || building.reviews.blank? %>
					<img src="/assets/stars/star0.png" height="16px" width="80px">
				<% else %>
				<%= star_image((building.reviews.average("overall")*4).round) %>
				<% end %>
			</li>
		<% end %>
		</ul>	
	</div>
</div>