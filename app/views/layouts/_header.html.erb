<!-- Small black topbar containing utility links -->
<div class="minitopbar">
	<div class="container">
		<nav>
			<ul class="push-left">
				<li><%= link_to "How it Works", "" %></li>
				<li><%= link_to "FAQ", "" %></li>				
			</ul>
		</nav>

		<nav>
			<% if user_signed_in? %>
				<ul class="push-right">
					<li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>		
					<li><%= link_to "My Account", "" %></li>	
				</ul>
			<% else %>
				<ul class="push-right">
					<li><%= link_to "Sign in", new_user_session_path %></li>
					<li><%= link_to "Sign up", new_user_registration_path %></li>			
				</ul>
			<% end %>
		</nav>
	
	</div>
</div>

<!-- Main interactive topbar -->
<div class="maintopbar">
	<div class="container">

		<nav>
			<div id="logo">
				<%= link_to(
				image_tag("BreezedigsLogo.png", 
				size: "160x44",
				alt: "Edit Entry",
				mouseover: "breezedigslogo_hover.png"), 
				root_path) 
				%>
			</div>
		</nav>

		<nav>
			I am moving to/within:<br>
			Dropdown box
		</nav>
	</div>
</div>



