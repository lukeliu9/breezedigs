<% provide(:title, 'Sign up') %>

<!-- Content Starts Here -->

<div class="main-content-area">
	<div class="container">

		<!--Flash Notice -->
		<div class="buffer"></div><div class="buffer-small"></div>	
			<% flash.each do |key, value| %>
				<%= content_tag(:div, value, class: "alert alert-#{key}") %>
			<% end %>
		<div class="buffer-small"></div>	

		<!-- Content Area -->

		<div class="login-graphic">
			<h3>Find your next digs</h3>
			<%= image_tag "digs.png" %>
		</div>

		<div class="login-box">
		<h2>Sign up</h2>
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			
			  <div>
			  	<%= f.text_field :first_name, 
			  	class: "auth-field", 
			  	style: "color: #5b5e62; width: 120px;", 
			  	placeholder: "First Name" %>

			  <%= f.text_field :last_name, 
			  	class: "auth-field", 
			  	style: "color: #5b5e62; width: 133px; margin-left: 8px;", 
			  	placeholder: "Last Name" %>
			  </div>

			  <div>
			  	<%= f.email_field :email, 
			  	autofocus: true, 
			  	class: "auth-field", 
			  	style: "color: #5b5e62;", 
			  	placeholder: "Email" %>
			  </div>

			  <div><%= f.password_field :password, 
			  	class: "auth-field", 
			  	style: "color: #5b5e62;", 
			  	placeholder: "Password" %>
			  </div>

			  <div><%= f.password_field :password_confirmation, 
			  	class: "auth-field", 
			  	style: "color: #5b5e62;", 
			  	placeholder: "Confirm password" %>
			  </div>

			  <div class="session-elements">
			  <br><div id="auth-btn"><%= f.submit "Create my account", class: "btn btn-primary"  %></div><br>
				<% end %>
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>