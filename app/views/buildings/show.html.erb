<% content_for :head do %>
	<%= stylesheet_link_tag 'buildings' %>
<% end %>

<% provide(:title, @building.name) %>

<div class="em-buffer-3"></div>

<div class="container">
	<div class="building-profile">

		<div class="interactive-holder">
			<div class="building-interactive-box">

					<div class="interactive-buttons">
						<button class="interactive-btn left-btn" id="selected">Photos</button>
						<button class="interactive-btn left-push">Map view</button>
						<button class="interactive-btn left-push">Bird's eye</button>
						<button class="interactive-btn right-btn">Street view</button>
					</div>

					<div class="building-main-area">

					</div>

					<div class="building-thumbnails">

					</div>
			</div>

			<div class="building-supplement">
				<p><span>Supermarket(s): </span><%= supermarket %></p>
				<p><span>School(s): </span><%= schools %></p>
				<p><span>Pet policy: </span><%= pets %></p>
			</div>

		</div>

		<div class="building-info-tab">
			<h1><%= @building.name %></h1>
			<p id="geography"><%= building_geography %></p>
			<p id="address-text"><%= @building.address %></p>
			
			<div class="description">
				<p><%= @building.description %></p>
			</div>

			<div class="building-stats">
				Test
			</div>
		</div>

		<div class="reviews">
			<div class="review-buttons-box">
				<%= render 'reviewbuttons' %>
			</div>

			<div class="review-content">
			</div>
		</div>

		<div class="rent-data">
		</div>

		<div class="building-contact">
		</div>

	</div>
</div>